<div class="form-group">
    <label for="title">Title</label>
    <input type="text" name="title" id="title" required value="<%= article.title %>" class="form-control">
    <label for="description">Description</label>
    <textarea name="description" id="description" class="form-control"><%= article.description %></textarea>
    <label for="markdown">Mark Down</label>
    <textarea name="markdown" id="markdown" required class="form-control"><%= article.markdown %></textarea>
</div>
<a href="/" class="btn btn-primary">Cancel</a>
<button type="submit" class="btn btn-primary">Save</button>